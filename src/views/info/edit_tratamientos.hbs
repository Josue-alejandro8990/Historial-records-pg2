<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <a class="btn-return" href="/profile/perfil/{{tratamiento.id_paciente}}">
                        <i class="fas fa-remove icon" style="color-white"></i></a>
                    <br>
                    <h3>Actualizacion De Tratamiento Del Paciente ID:{{tratamiento.id_paciente}}</h3>
                </div>
                <form action="/info/edit_tratamientos/{{tratamiento.id_paciente}}" method="POST">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <p class="p-nombres2">DESCRIPCION : </p>
                                    <input type="type" name="descripcion" value="{{tratamiento.descripcion}}"
                                        class="form-control" autofocus>
                                </div>
                                <div class="form-group">
                                    <p class="p-nombres2">MEDICAMENTO : </p>
                                    <input type="type" name="medicamento" value="{{tratamiento.medicamento}}"
                                        class="form-control" autofocus>
                                </div>
                                <div class="form-group">
                                    <p class="p-nombres2">DOSIS : </p>
                                    <input type="type" name="dosis" value="{{tratamiento.dosis}}" class="form-control"
                                        autofocus>
                                </div>
                                <div class="form-group">
                                    <p class="p-nombres2">DURACION DEL TRATAMIENTO : </p>
                                    <input type="type" name="tiempo" value="{{tratamiento.tiempo}}" class="form-control"
                                        autofocus>
                                </div>
                                <div class="form-group">
                                    <p class="p-nombres2">FECHA DE ASGINACION : </p>
                                    <input class="form-control" type="date" name="fecha"
                                        value="{{formatDate tratamiento.fecha}}">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-success btn-block">
                                        Actualizar Registro
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>